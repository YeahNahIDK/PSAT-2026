###############################################################################
# PSAT-2026 Firmware Makefile  (MSP430FR2355)
# This Makefile compiles all .c files in src/ and outputs into build/.
###############################################################################

# ---------------------------------------------------------------------------
# 1. Compiler + MCU Settings
# ---------------------------------------------------------------------------

CC = msp430-elf-gcc
OBJCOPY = msp430-elf-objcopy
MCU = msp430fr2355

# ---------------------------------------------------------------------------
# 2. Directories
# ---------------------------------------------------------------------------

SRC_DIR = src
INC_DIR = inc
BUILD_DIR = build

# Collect all .c files
SRCS = $(wildcard $(SRC_DIR)/*.c)
OBJS = $(patsubst $(SRC_DIR)/%.c, $(BUILD_DIR)/%.o, $(SRCS))

# Output name
TARGET = $(BUILD_DIR)/firmware.elf

# ---------------------------------------------------------------------------
# 3. Compiler Flags for MSP430FR2355
# ---------------------------------------------------------------------------

CFLAGS = -mmcu=$(MCU) -I$(INC_DIR) -Os -Wall -Wextra

# ---------------------------------------------------------------------------
# 4. Build Rules
# ---------------------------------------------------------------------------

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

# Compile .c â†’ .o
$(BUILD_DIR)/%.o: $(SRC_DIR)/%.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(BUILD_DIR)/*.o $(TARGET)

###############################################################################
# END OF MAKEFILE
###############################################################################
